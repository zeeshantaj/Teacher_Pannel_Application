<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="10dp"/>
            <gradient
                android:startColor="#E6FCFF"
                android:centerColor="#E6FCFF"
                android:endColor="#E6FCFF"
                android:angle="45"/>
        </shape>
    </item>

    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="10dp"/>
            <gradient
                android:startColor="@color/default_start_color"
                android:centerColor="@color/default_center_color"
                android:endColor="@color/default_end_color"
                android:angle="45"/>
        </shape>
    </item>
</selector>
